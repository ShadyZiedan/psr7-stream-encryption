{
    "name": "whatsapp/psr7-stream-encryption",
    "description": "PSR-7 stream decorators for WhatsApp-style encryption and decryption",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "WhatsApp Stream Encryption",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^1.0",
        "jsq/psr7-stream-encryption": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WhatsApp\\Psr7StreamEncryption\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhatsApp\\Psr7StreamEncryption\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
